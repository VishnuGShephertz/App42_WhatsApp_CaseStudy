<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/header_chat"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/header_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/default_pic" 
        android:onClick="loadIfo"/>
  <TextView
        android:id="@+id/display_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:maxLength="20"
        android:ellipsize="marquee"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/from_gallery"
        android:layout_toRightOf="@+id/header_icon"
        android:singleLine="true"
        android:textSize="20dp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/from_gallery"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:background="@android:drawable/ic_menu_gallery" 
        android:onClick="loadFromGallery"/>
</RelativeLayout>